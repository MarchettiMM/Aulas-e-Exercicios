programa
{
	funcao inicio()
	{
		inteiro num

		escreva("Digite um número inteiro: \n")
		leia(num)

		se(num%2==0)
		{
			escreva("ESSE NÚMERO É PAR")
		}
		 senao 
		 escreva("ESSE NÚMERO É IMPAR")
	}
}
